.menu-icon
  vertical-align: middle
  position: relative
  display: inline-block
  margin: .75rem
  padding: 0.625rem
  padding-top: .75rem
  width: 2.5rem
  height: 2.5rem
  border: 0.0625rem solid transparent
  border-radius: 100%

  +has('bar')
    position: relative
    background-color: palette('White')
    width: 100%
    height: .125rem
    margin-top: 0.25rem
    margin-bottom: 0.25rem
    &:first-child
      margin-top: 0
    &:last-child
      margin-bottom: 0

